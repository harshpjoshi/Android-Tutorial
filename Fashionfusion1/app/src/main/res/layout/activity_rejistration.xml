<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/joy"
        tools:context=".rejistration">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#47633c25"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewregistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-0dp"
                android:layout_marginEnd="0dp"
                android:text="Registration Form"
                android:textColor="#020202"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="0dp"
                android:drawableRight="@drawable/ic_person_black_24dp"
                android:ems="15"
                android:hint="Name:"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="#ddf4f9f9"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_call_black_24dp"
                android:ems="15"
                android:hint="Number:"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="#ddf4f9f9"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_email_black_24dp"
                android:ems="15"
                android:hint="E-mail:"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="#ddf4f9f9"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_visibility_off_black_24dp"
                android:ems="15"
                android:hint="Password:"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#ddf4f9f9"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_visibility_off_black_24dp"
                android:ems="15"
                android:hint="Confirm password:"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#ddf4f9f9"
                android:visibility="visible" />


            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/round"
                android:text="Confirm"
                android:textStyle="bold" />
        </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>