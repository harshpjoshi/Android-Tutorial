<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_marginTop="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/bmslogo"
        android:id="@+id/login_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:textSize="18dp"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/login_text_logo"
        android:text="Borana Maheshwari Samaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_logo"
        android:layout_marginTop="20dp"
        android:textColor="@color/button"
        />

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/login_text_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/login_email"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/login_password"
                android:hint="Password"
                android:layout_marginTop="10dp"
                android:layout_below="@id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/login_forgot_password"
                android:layout_marginTop="10dp"
                android:layout_below="@id/login_password"
                android:text="Forgot Password?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/login_password"
                />

            <Button
                android:id="@+id/login_btn"
                android:layout_marginTop="10dp"
                android:layout_below="@id/login_forgot_password"
                android:textColor="@color/colorPrimary"
                android:text="Login"
                android:background="@color/button"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>
</ScrollView>