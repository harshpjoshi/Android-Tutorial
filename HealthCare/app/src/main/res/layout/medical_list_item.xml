<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp">

            <ImageView
                android:id="@+id/img_medical"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/img_medical"
                android:textSize="16dp"
                android:textColor="@color/primaryText"
                android:text="Healthcare"
                android:fontFamily="@font/rubik_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_medical"/>

            <TextView
                android:id="@+id/city_medical"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/secondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_medical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_medical"
                />

            <TextView
                android:id="@+id/type_hos"
                android:fontFamily="@font/rubik_regular"
                android:textColor="@color/secondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_hos"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_medical"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>