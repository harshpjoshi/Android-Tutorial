<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_medicalstore_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/medical_del_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Medicalname"
            android:textColor="@color/primaryText"
            android:textSize="16dp"
            android:fontFamily="@font/rubik_medium"
            android:textStyle="bold"/>

        <TextView
            android:fontFamily="@font/rubik_regular"
            android:id="@+id/medical_del_address"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:drawablePadding="10dp"
            android:textSize="14dp"
            android:text="B-5, Maan Nagar Appartment. Beside Mithila Nagari Adajangan, Surat"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:textColor="@color/primaryText"
            android:layout_below="@id/medical_del_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="7845689127"
            android:fontFamily="@font/rubik_regular"
            android:drawablePadding="7dp"
            android:drawableLeft="@drawable/ic_call_white"
            android:textColor="@color/primaryText"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/medical_del_mobile"
            android:layout_below="@id/medical_del_address"/>

        <TextView
            android:id="@+id/medical_direction"
            android:layout_below="@id/medical_del_mobile"
            android:fontFamily="@font/rubik_regular"
            android:drawablePadding="7dp"
            android:drawableLeft="@drawable/ic_directions_black_24dp"
            android:textColor="@color/primaryText"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direction"/>

        <TextView
            android:id="@+id/medical_description"
            android:layout_below="@id/medical_direction"
            android:fontFamily="@font/rubik_regular"
            android:drawablePadding="7dp"
            android:textColor="@color/primaryText"
            android:textSize="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direction"/>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>