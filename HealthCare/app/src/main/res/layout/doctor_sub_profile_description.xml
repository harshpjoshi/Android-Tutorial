<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_doctor_sub_profile"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="20dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/doc_name"
                android:fontFamily="@font/rubik_medium"
                android:textColor="@color/secondaryText"
                android:textSize="16dp"
                android:text="Harsh JOshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/doc_mobile"
                android:textColor="@color/secondaryText"
                android:layout_marginTop="5dp"
                android:text="123556788900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/doc_type"
                android:text="Type"
                android:textColor="@color/secondaryText"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/doc_email"
                android:text="Email"
                android:textColor="@color/secondaryText"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/doc_address"
                android:layout_marginTop="5dp"
                android:textColor="@color/secondaryText"
                android:text="@string/common_google_play_services_install_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.core.widget.NestedScrollView>