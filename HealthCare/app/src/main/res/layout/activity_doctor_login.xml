<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorLogin">

    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_doctor_stetus"
        />




    <android.support.v7.widget.CardView
        android:layout_below="@id/logo"
        android:id="@+id/cardlog"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="20dp">

        <RelativeLayout
            android:id="@+id/rel_log"
            android:padding="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login As A Doctor"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/primaryText"
                android:id="@+id/type_label"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_input_email_doc"
                android:layout_below="@id/type_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_email_login_doc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Email"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/login_input_password_doc"
                android:layout_below="@id/login_input_email_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_pasword_login_doc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="Pasword"/>

            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/login_btn_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_input_password_doc"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"
                android:text="Login"
                android:textColor="#fff" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/forgot_password_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_below="@id/cardlog"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Forgot Password?"/>

    <View
        android:layout_marginTop="20dp"
        android:layout_below="@id/forgot_password_doc"
        android:layout_centerHorizontal="true"
        android:id="@+id/log_view_doc"
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:background="#fff"/>

    <TextView
        android:id="@+id/registration_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Create New Account"
        android:textColor="#fff"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/log_view_doc"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
</ScrollView>