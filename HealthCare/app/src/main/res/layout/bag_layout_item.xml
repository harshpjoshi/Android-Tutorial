<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bag_item_image"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/bag_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/bag_item_image"
                android:fontFamily="@font/rubik_medium"
                android:textColor="@color/primaryText"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bag_item_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/bag_item_image"
                android:fontFamily="@font/rubik_medium"
                android:text="Qty"
                android:textColor="@color/primaryText"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/qty_bag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/qty_title"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/bag_item_image"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:drawablePadding="2dp"
                android:fontFamily="@font/rubik_medium"
                android:text="2"
                android:textColor="@color/primaryText"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/bag_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="61dp"
                android:layout_marginLeft="112dp"
                android:layout_marginBottom="70dp"
                android:layout_toEndOf="@id/qty_title"
                android:layout_toRightOf="@id/bag_item_image"
                android:fontFamily="@font/rubik_bold"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/delete_bag_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="80dp"
                android:layout_below="@+id/qty_title"
                android:layout_toEndOf="@+id/bag_item_image"
                app:srcCompat="@drawable/ic_delete_black_24dp" />


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>