<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <RelativeLayout
            android:id="@+id/rel3"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/doc_profile_item"
                />

            <TextView
                android:text="Harsh"
                android:layout_toRightOf="@id/doc_profile_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doc_name_item"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/primaryText"
                android:textSize="16dp"
                android:textStyle="bold"
                android:fontFamily="@font/rubik_regular"
                />

            <TextView
                android:text="12345678"
                android:drawableLeft="@drawable/ic_call_white"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/rubik_regular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/doc_profile_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doc_mobile_item"
                android:layout_below="@id/doc_name_item"/>

            <TextView
                android:drawableLeft="@drawable/ic_doctor"
                android:text="Physu"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/rubik_regular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/doc_profile_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doc_type_item"
                android:layout_below="@id/doc_mobile_item"/>

            <TextView
                android:drawableLeft="@drawable/ic_location_city_black_24dp"
                android:textColor="@color/secondaryText"
                android:fontFamily="@font/rubik_regular"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/doc_type_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doc_city_item"
                android:layout_below="@id/doc_mobile_item"/>

        </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@id/rel3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerColor"/>

</RelativeLayout>