<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/changeprofile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
       android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <androidx.cardview.widget.CardView
        android:layout_below="@id/changeprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_status_card"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <com.libizo.CustomEditText
               android:padding="10dp"
               android:id="@+id/change_status"
               android:text="Change Status"
               android:textSize="18dp"
               android:layout_centerHorizontal="true"
               android:fontFamily="@font/coiny"
               android:textColor="@color/primaryText"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

       </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/change_status_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_name_card"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.libizo.CustomEditText
                android:padding="10dp"
                android:text="Name"
                android:textSize="18dp"
                android:id="@+id/change_name"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/coiny"
                android:textColor="@color/primaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/change_name_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_username_card"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.libizo.CustomEditText
                android:padding="10dp"
                android:text="Username"
                android:textSize="18dp"
                android:id="@+id/change_username"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/coiny"
                android:textColor="@color/primaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/change_username_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_mobile_card"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.libizo.CustomEditText
                android:padding="10dp"
                android:text="Mobile"
                android:textSize="18dp"
                android:id="@+id/change_mobile"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/coiny"
                android:textColor="@color/primaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>